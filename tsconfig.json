{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "removeComments": true,
    "types": ["chrome", "node", "jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["./src"]
}
